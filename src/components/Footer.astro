import Dribbble from "../assets/Icons/dribbble.svg";
import Linkedin from "../assets/Icons/linkedin.svg";
import cv from '../assets/pdf/curriculum.pdf';
---

<footer class="w-full max-lg:flex max-lg:flex-col border-t border-details pt-9 footer">
    <div class="flex flex-col gap-5 px-9">
        <div class="flex gap-4 items-center">
            <img src={Logo.src} alt="Logo" class="w-7" />
            <p>Yeferson ruzon.</p>
        </div>
    </div>
    <div class="flex max-lg:flex-col max-lg:justify-start justify-between px-9">
        <div class="w-full flex max-lg:flex-col gap-5 justify-between">
            <ul class="flex flex-7/12 flex-col gap-1 mt-4 font-light">
                <li class="text-gray-200 hover:text-white">
                    <a href="mailto:yefersonruzon@gmail.com">yefersonruzon@gmail.com</a>
                </li>
                <li class="text-gray-200 hover:text-white">+57 3153509891</li>
            </ul>
            <ul class="flex-1/12 max-lg:flex-col">
                <li class="text-gray-400 hover:text-white transition-colors">
                    <a href="#home"> Home </a>
                </li>
                <li class="text-gray-400 hover:text-white transition-colors">
                    <a href="#about">About me</a>
                </li>
                <li class="text-gray-400 hover:text-white transition-colors">
                    <a href="#portfolio">Portfolio</a>
                </li>
                <li class="text-gray-400 hover:text-white transition-colors">
                    <a href="#contact">Contact</a>
                </li>
                <li  class="text-gray-400 hover:text-white transition-colors">
                    <a href={cv} download>Download CV</a>
                </li>
            </ul>
            <div class="flex-1/12">
                <h5>Follow me!</h5>
                <ul class="flex mt-3 mb-4 gap-5">
                    <li>
                        <a
                            target="_blank"
                            href="https://github.com/yefersonruzon"
                            class="bg-details p-3 rounded-full group hover:bg-primary cursor-pointer w-fit h-fit block"
                            ><img
                                src={Github.src}
                                class="w-5"
                                alt="github logo"
                            /></a>
                    </li>
                    <li>
                        <a
                            target="_blank"
                            href="https://dribbble.com/YefersonRuzon"
                            class="bg-details p-3 rounded-full group hover:bg-primary cursor-pointer w-fit h-fit block"
                            ><img
                                src={Dribbble.src}
                                class="w-5"
                                alt="Dribbble logo"
                            /></a>
                    </li>
                    <li>
                        <a
                            target="_blank"
                            href="https://www.linkedin.com/in/yefersonruzon/"
                            class="bg-details p-3 rounded-full group hover:bg-primary cursor-pointer w-fit h-fit block"
                            ><img
                                src={Linkedin.src}
                                class="w-5"
                                alt="Linkedin logo"
                            /></a>
                    </li>
                </ul>
            </div>
        </div>
    </div>
    <div class="mt-20 max-lg:mt-10 border-t border-details bg-bg">
        <p class="text-gray-400 text-center font-light py-10">
